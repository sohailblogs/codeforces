import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        String d = s.next();
        char[] c = d.toCharArray();
        for(int i = 0; i < c.length; i++){
            if(i == 0){
                System.out.print(Character.toUpperCase(c[i]));
                continue;
            }
            System.out.print(c[i]);
        }
        
    }
}
