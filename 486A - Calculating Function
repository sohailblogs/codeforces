import java.util.*;
import java.math.*;
public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        long n = s.nextLong();
        if(n % 2 == 0){
            System.out.println(n/2);
        }
        else{
            System.out.println((-1)*(n/2 + 1));
        }
        
    }
    
}
