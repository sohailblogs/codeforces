import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        int n = s.nextInt();
        String v = s.next();
        char[] c = v.toCharArray();
        
        int count = 0;
        for(int i = 0; i < c.length - 1; i++){
            if(c[i] == c[i+1]){count++;}
        }
        System.out.println(count);
        
    }
}
