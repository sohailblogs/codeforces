import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner obj = new Scanner(System.in);
	    int[] f = new int[2];
	    for(int i = 0; i < 2; i++){
	        f[i] = obj.nextInt();
	    }
	    if(f[0]*f[1] % 2 == 0){System.out.println(f[0]*f[1]/2);}
	    else{System.out.println((f[0]*f[1] - 1)/2);}
	}

}
