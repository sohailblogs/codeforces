import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		Scanner obj = new Scanner(System.in);
		int n = obj.nextInt();
		int[] j = new int[n];
		for(int i = 0; i < n; i++){
		    j[i] = obj.nextInt();
		}
		double[] k = new double[n];
		for(int i = 0; i < n; i++){
		    k[i] = j[i] /100.0;
		}
		double sum = 0;
		for(int i = 0; i < n; i++){
		    sum += k[i];
		}
		double div = sum / n;
		System.out.println(div*100);
	}
}
